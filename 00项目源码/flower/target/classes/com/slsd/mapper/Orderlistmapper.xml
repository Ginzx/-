<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slsd.dao.OrderlistDao">
	<select id="findall" resultType="com.slsd.entity.Orderlist">
		select * from orderlist order by
		listid
	</select>
	<select id="findbyid" parameterType="int" resultType="com.slsd.entity.Orderlist">
		select
		*from orderlist where listid=#{listid}
	</select>
	<insert id="add" useGeneratedKeys="true" parameterType="com.slsd.entity.Orderlist">
		insert
		into orderlist (listId,lid,number,flower,price)
		values(#{listID},#{lid},#{number},#{flower},#{price})
	</insert>

	<delete id="del" parameterType="int">
		delete from orderlist where
		lisetid=#{listid}
	</delete>
</mapper>